# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_VERSION=v1.0.0
LOG_LEVEL=info
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_FILTERING=true
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
APPINSIGHTS_SAMPLING_PERCENTAGE=100
ENABLE_DISTRIBUTED_TRACING=true
PERFORMANCE_ALERT_THRESHOLD_MS=2000
AVAILABILITY_ALERT_THRESHOLD=99.9

# Security Configuration
TLS_MIN_VERSION=1.2
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem
ALLOWED_ORIGINS=https://app.myelixir.com,https://api.myelixir.com
TRUSTED_PROXIES=10.0.0.0/8
IP_WHITELIST=127.0.0.1,10.0.0.0/8
GEO_RESTRICTION_ENABLED=true
ALLOWED_COUNTRIES=US,CA,GB
BREACH_NOTIFICATION_ENDPOINT=https://security.myelixir.com/breach
SECURITY_CONTACT=security@myelixir.com

# Azure AD B2C Authentication
AZURE_AD_B2C_TENANT_NAME=your-tenant-name
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_SIGNUP_SIGNIN_POLICY=B2C_1_SignUpSignIn
AZURE_AD_B2C_RESET_PASSWORD_POLICY=B2C_1_PasswordReset
AZURE_AD_B2C_EDIT_PROFILE_POLICY=B2C_1_EditProfile
AZURE_AD_B2C_REDIRECT_URI=http://localhost:3000/auth/callback
JWT_ACCESS_TOKEN_SECRET=your-32-char-min-access-token-secret
JWT_REFRESH_TOKEN_SECRET=your-32-char-min-refresh-token-secret

# MFA Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_BACKUP_PROVIDER=messagebird
SMS_BACKUP_API_KEY=your-backup-sms-api-key
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_BACKUP_SERVICE=mailgun
EMAIL_BACKUP_API_KEY=your-backup-email-api-key
MFA_TOKEN_EXPIRY_MINUTES=5
MFA_BACKUP_CODES_COUNT=10
EMERGENCY_APPROVERS=admin1@myelixir.com,admin2@myelixir.com

# MongoDB Settings
MONGODB_URI=mongodb://localhost:27017/myelixir
MONGODB_DB_NAME=myelixir
MONGODB_MAX_POOL_SIZE=100
MONGODB_REPLICA_SET=rs0
MONGODB_SSL_ENABLED=true
MONGODB_RETRY_WRITES=true
MONGODB_BACKUP_URI=mongodb://backup:27017/myelixir

# Medplum FHIR Settings
MEDPLUM_SERVER_URL=https://api.medplum.com/fhir/R4
MEDPLUM_CLIENT_ID=your-medplum-client-id
MEDPLUM_CLIENT_SECRET=your-medplum-client-secret
MEDPLUM_BACKUP_SERVER_URL=https://backup.medplum.com/fhir/R4
FHIR_VALIDATION_ENABLED=true
FHIR_MAX_RESOURCE_SIZE=5mb
FHIR_ALLOWED_RESOURCES=Patient,Observation,Condition

# Redis Settings
REDIS_CLUSTER_ENABLED=true
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL_ENABLED=true
REDIS_KEY_PREFIX=myelixir:
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1000
REDIS_KEEPALIVE=true
REDIS_BACKUP_NODES=redis-backup1:6379,redis-backup2:6379

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_BACKUP_ENABLED=true
AUDIT_ALERT_THRESHOLD=100
AUDIT_NOTIFICATION_ENDPOINT=https://audit.myelixir.com/alerts