{
  "watch": ["src"],
  "ext": ".ts,.js,.json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts", 
    "src/coverage",
    "src/**/*.d.ts"
  ],
  "exec": "ts-node ./src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "events": {
    "restart": "echo \"[nodemon] App restarted due to changes\""
  },
  "delay": "1500",
  "legacyWatch": false
}